<?xml version="1.0"?>
<layout version="0.1.0">
        <default>
		<reference name="head">
			<action method="addJs"><script>simi/simidailydeal.js</script></action>
		</reference>
	</default>
	<simidailydealadmin_adminhtml_simidailydeal_index>
		<reference name="content">
			<block type="simidailydeal/adminhtml_simidailydeal" name="simidailydeal" />
		</reference>
	</simidailydealadmin_adminhtml_simidailydeal_index>
        <simidailydealadmin_adminhtml_randomdeal_index>
		<reference name="content">
			<block type="simidailydeal/adminhtml_randomdeal" name="randomdeal" />
		</reference>
	</simidailydealadmin_adminhtml_randomdeal_index>
        
	
	<simidailydealadmin_adminhtml_simidailydeal_listproduct>	
		<block type="core/text_list" name="root">
            <block type="simidailydeal/adminhtml_simidailydeal_edit_tab_listproduct" name="simidailydeal.edit.tab.listproduct"/>
            <block type="simidailydeal/adminhtml_simidailydeal_serializer" name="related_grid_serializer">
				<action method="initSerializerBlock">
					<grid_block_name>simidailydeal.edit.tab.listproduct</grid_block_name>
					<hidden_input_name>candidate_product_id</hidden_input_name>
				</action>
            </block>
        </block>		
	</simidailydealadmin_adminhtml_simidailydeal_listproduct>
        
       <simidailydealadmin_adminhtml_randomdeal_listproduct>	
		<block type="core/text_list" name="root">
            <block type="simidailydeal/adminhtml_randomdeal_edit_tab_listproduct" name="randomdeal.edit.tab.listproduct"/>
        </block>		
	</simidailydealadmin_adminhtml_randomdeal_listproduct>
	
	<simidailydealadmin_adminhtml_simidailydeal_listproductgrid>
	    <block type="core/text_list" name="root">
	        <block type="simidailydeal/adminhtml_simidailydeal_edit_tab_listproduct" name="simidailydeal.edit.tab.listproduct"/>
	    </block>	
	</simidailydealadmin_adminhtml_simidailydeal_listproductgrid>
        <simidailydealadmin_adminhtml_randomdeal_listproductgrid>
	    <block type="core/text_list" name="root">
	        <block type="simidailydeal/adminhtml_randomdeal_edit_tab_listproduct" name="randomdeal.edit.tab.listproduct"/>
	    </block>	
	</simidailydealadmin_adminhtml_randomdeal_listproductgrid>
        

        <simidailydealadmin_adminhtml_simidailydeal_listordergrid>
	    <block type="core/text_list" name="root">
	        <block type="simidailydeal/adminhtml_simidailydeal_edit_tab_listorder" name="simidailydeal.edit.tab.listorder"/>
	    </block>	
	</simidailydealadmin_adminhtml_simidailydeal_listordergrid>

        <simidailydealadmin_adminhtml_randomdeal_listordergrid>
	    <block type="core/text_list" name="root">
	        <block type="simidailydeal/adminhtml_randomdeal_edit_tab_listorder" name="randomdeal.edit.tab.listorder"/>
	    </block>	
	</simidailydealadmin_adminhtml_randomdeal_listordergrid>
</layout>