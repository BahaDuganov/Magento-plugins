<?xml version="1.0"?>
<layout version="0.1.0">
	<default>
            <reference name="top.links">
            <action method="addLink" translate="label title" module="simidailydeal"><label>Daily deal</label><url helper="simidailydeal/getSimidailydealUrl"/><title>Simidailydeal</title><prepare/><urlParams/><position>10</position></action>
            </reference>
            <reference name="head">
			 <action method="addCss"><stylesheet>css/simi/simidailydeal.css</stylesheet></action>
                         <action method="addJs"><script>simi/simidailydeal.js</script></action>
            </reference>
            
            <reference name="left">
		
			<block type="simidailydeal/sidebar" before="-" name="simidailydeal.left.sidebar">
				<action method="displayOnLeftSidebarBlock" />
			</block>
			
            </reference>
		
            <reference name="right">
		
			<block type="simidailydeal/sidebar" before="-" name="simidailydeal.right.sidebar" >
				<action method="displayOnRightSidebarBlock" />
			</block>
			
            </reference>
	</default>
	<simidailydeal_index_index>
		<reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="simidailydeal/simidailydeal" name="simidailydeal" template="simidailydeal/simidailydeal.phtml" >
                 <block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                    <block type="page/html_pager" name="product_list_toolbar_pager"/>
                </block>
                <action method="setToolbarBlockName"><name>product_list_toolbar</name></action>
            </block>
        </reference>
	</simidailydeal_index_index>
    <catalog_product_view>
	    <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
		<reference name="product.info.extrahint">
			<block type="simidailydeal/productsimidailydeal" name="productsimidailydeal" as="other" template="simidailydeal/product_simidailydeal.phtml"  before="-">
			</block>
		</reference>
	</catalog_product_view>
</layout>