<config>
    <api>
        <resources>
            <giftcard translate="title" module="simigiftvoucher">
                <title>Gift Card</title>
                <acl>giftcard</acl>
                <model>simigiftvoucher/api</model>
                <methods>                    
                    <list translate="title" module="customer">
                        <title>Retrive giftcard</title>
                        <method>items</method> 
                        <acl>giftcard/list</acl>
                    </list>
                    <check translate="title" module="simigiftvoucher">
                        <title>Check giftcard</title>
                        <acl>giftcard/check</acl>
                    </check>
                    <create translate="title" module="simigiftvoucher">
                        <title>Create giftcard</title>
                        <acl>giftcard/create</acl>
                    </create>
                    <massCreate translate="title" module="simigiftvoucher">
                        <title>massCreate giftcard</title>
                        <acl>giftcard/massCreate</acl>
                    </massCreate>
                    <history translate="title" module="simigiftvoucher">
                        <title>history giftcard</title>
                        <acl>giftcard/history</acl>
                    </history>
                    <update translate="title" module="simigiftvoucher">
                        <title>Update giftcard data</title>
                        <acl>giftcard/update</acl>
                    </update>
                    <sendEmail translate="title" module="simigiftvoucher">
                        <title>sendEmail</title>
                        <acl>giftcard/sendEmail</acl>
                    </sendEmail>
                    <redeemToCredit translate="title" module="simigiftvoucher">
                        <title>redeemToCredit</title>
                        <acl>giftcard/redeemToCredit</acl>
                    </redeemToCredit>
                </methods>
                <faults module="simigiftvoucher">
                    <data_invalid>
                        <code>100</code>
                        <message>Invalid Gift card data. View details in error message</message>
                    </data_invalid>
                    <filters_invalid>
                        <code>101</code>
                        <message>Invalid filter data. View details in error message</message>
                    </filters_invalid>
                    <not_exists>
                        <code>102</code>
                        <message>Giftcard not exists.</message>
                    </not_exists>
                    <invalid_code>
                        <code>103</code>
                        <message>Invalid card code. View details in error message.</message>
                    </invalid_code>
                    <limited_code>
                        <code>104</code>
                        <message>The gift code usage has exceeded the number of users allowed.</message>
                    </limited_code>
                </faults>
            </giftcard>
            <giftcard_credit>
                <title>Credit GiftCard</title>
                <acl>giftcard/credit</acl>
                <model>simigiftvoucher/api</model>
                <methods>                    
                    <info translate="title" module="simigiftvoucher">
                        <title>Retrieve Credit GiftCard data</title>
                        <acl>giftcard/credit/info</acl>
                    </info>
                    <updateCredit translate="title" module="simigiftvoucher">
                        <title>Update Credit GiftCard data</title>
                        <acl>giftcard/credit/updateCredit</acl>
                    </updateCredit>
                 </methods>  
            </giftcard_credit>
        </resources>
        <v2>
            <resources_function_prefix>
                <giftcard>giftcard</giftcard>
                <giftcard_credit>giftcardCredit</giftcard_credit>
            </resources_function_prefix>
        </v2>
        <acl>
            <resources>
                <giftcard translate="title" module="simigiftvoucher">
                    <title>Gift Card</title>
                    <sort_order>2000</sort_order> 
                    <list translate="title" module="simigiftvoucher">
                        <title>View All</title>
                    </list> 
                    <check translate="title" module="simigiftvoucher">
                        <title>Create</title>
                    </check>                  
                    <create translate="title" module="simigiftvoucher">
                        <title>Create</title>
                    </create>
                    <massCreate translate="title" module="simigiftvoucher">
                        <title>MassCreate</title>
                    </massCreate>
                    <history translate="title" module="simigiftvoucher">
                        <title>History</title>
                    </history>
                    <update translate="title" module="simigiftvoucher">
                        <title>Update</title>
                    </update>
                    <sendEmail translate="title" module="simigiftvoucher">
                        <title>sendEmail</title>
                    </sendEmail>
                    <redeemToCredit translate="title" module="simigiftvoucher">
                        <title>redeemToCredit</title>
                    </redeemToCredit>
                    <credit translate="title" module="simigiftvoucher">
                         <title>Credit</title>
                         <sort_order>100</sort_order>
                         <info translate="title" module="simigiftvoucher">
                            <title>Info Credit Giftcard</title>
                         </info>
                         <updateCredit translate="title" module="simigiftvoucher">
                            <title>Update Credit Giftcard</title>
                         </updateCredit>
                     </credit>
                </giftcard>
            </resources>
        </acl>
    </api>
</config>